{% extends 'base.html.twig' %}

{% block title %}Création évènement{% endblock %}

{% block body %}
<style>
    #form {
        position: relative;
        width: 500px;
        margin: 50px auto 100px auto;
    }

    input {
        font-family: 'Lato', sans-serif;
        font-size: 0.875em;
        width: 100%;
        height: 50px;
        padding: 0px 15px 0px 15px;

        background: transparent;
        outline: none;
        color: #726659;

        border: solid 1px #b3aca7;
        border-bottom: none;

        transition: all 0.3s ease-in-out;
        -webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        -ms-transition: all 0.3s ease-in-out;
    }

    input:hover {
        background: #EEEDEE;
        color: #fffff;
    }

    textarea {
        width: 500px;
        height: 110px;
        max-height: 110px;
        padding: 15px;
        resize: none;

        background: transparent;
        outline: none;

        color: #726659;
        font-family: 'Lato', sans-serif;
        font-size: 0.875em;

        border: solid 1px #b3aca7;

        transition: all 0.3s ease-in-out;
        -webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        -ms-transition: all 0.3s ease-in-out;
    }

    textarea:hover {
        background: #EEEDEE;
    }

    .butAjouter{
        background-color: #6DB106;
        color: white;
        padding: 5px 10px 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 8px;
        transition-duration: 0.2s;
        border: 2px solid #2C3220;
        font-weight: 400;
        font-family : Frutiger, Arial, Helvetica, sans-serif;
        width: 100%;
    }

    .butAjouter:hover {
        background-color: white;
        color: #6DB106;
        box-shadow: 0 5px 5px 0 rgba(0,0,0,0.24), 0 5px 5px 0 rgba(0,0,0,0.19);
        cursor: pointer;
    }

    .butAjouter:active {
        background-color: #E1EEBE;
        box-shadow: 0 2px #666;
        transform: translateY(2px);

    }
    #titre {
        border-radius: 10px 10px 0 0 ;
    }

    #desc {
        border-radius: 0 0 10px 10px;
    }
</style>

    <div>
        <form id="form" method="post">
            <input required="required" id="titre" type="text" name="titre" placeholder="Titre évènement">
            <input required="required" id="orga" type="text" name="orga" placeholder="Nom organisateur (entreprise ou personne)">
            <input required="required" id="ville" type="text" name="ville" placeholder="Ville">
            <input pattern="/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/" required="required" id="mail" type="text" name="mail" placeholder="Mail de contact">
            <input required="required" id="tel" type="text" name="tel" placeholder="Numéro de téléphone">
            <textarea required="required" id="desc" type="text" name="desc" placeholder="Description de l'évènement"></textarea>
            <input id="submit" type="submit" class="butAjouter" value="Ajouter">

        </form>
    </div>

{% endblock %}
