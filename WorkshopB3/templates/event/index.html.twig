{% extends 'base.html.twig' %}

{% block body %}
    <br>
        <center><h3>Nos évènements</h3></center><br>
        {% for event in events %}
            <div class="container eventContainer">
                <div class="global">
                    <h1 class="titre">{{ event.titre }}</h1>
                    <h2 class="orga">{{ event.nomorganisateur }}</h2>
                    <h3 class="lieu">{{ event.lieu }}</h3>
                    <div class="desc">{{ event.description }}</div>
                    <br>
                    <div class="contact">Contact : {{ event.mail }} <span>/</span> <span>{{ event.tel }} </span></div>
                </div>
            </div><br>
        {% endfor %}

    <style>
        .eventContainer {
            border-style: solid;
            border-width: 1px;
            border-radius: 10px;
            width: fit-content;
            height: fit-content;
        }

        .global{
            padding:16px;
            background-color: #EBEBEB;
            border-radius: 10px;
        }

        .titre {
            color:#222;
            font-weight:lighter;
            text-shadow: 0.2px 0.2px 0.2px #000;
        }

        .lieu {
            color:#222;
            font-weight:lighter;
            text-shadow: 0.2px 0.2px 0.2px #000;
        }

        .desc {
        }

        .contact {
            float: right;
            font-weight:700;
        }


    </style>
{% endblock %}